<Page
    x:Class="ProjekatMEDICA.NarucivanjeProizvoda"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjekatMEDICA"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="buttonRacun" Content="Račun" HorizontalAlignment="Left" Margin="33,25,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="textImePrezime" HorizontalAlignment="Left" Margin="170,30,0,0" TextWrapping="Wrap" Text="Ime i prezime" VerticalAlignment="Top" Width="100" FlowDirection="RightToLeft"/>
        <TextBlock x:Name="textOdjaviSe" HorizontalAlignment="Left" Margin="275,30,0,0" TextWrapping="Wrap" Text="(odjavi se)" VerticalAlignment="Top"/>
        <TextBlock x:Name="textAzuriraj" HorizontalAlignment="Left" Margin="520,50,0,0" TextWrapping="Wrap" Text="(ažuriraj)" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Text="{Binding Path=pretraga}" Margin="35,115,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="298"/>
        <Button x:Name="buttonTraži" Content="Traži" HorizontalAlignment="Left" Margin="140,160,0,0" VerticalAlignment="Top" Width="100"/>
        <ListView HorizontalAlignment="Left" Height="337" Margin="40,208,0,0" VerticalAlignment="Top" Width="293" Padding="70,0,0,0"/>
        <Button Content="Naruči&#xD;&#xA;" HorizontalAlignment="Left" Margin="510,223,0,0" VerticalAlignment="Top" Width="77" Height="32"/>
        <Button Content="Kupi" HorizontalAlignment="Left" Margin="130,585,0,0" VerticalAlignment="Top" Width="78"/>

    </Grid>
</Page>
